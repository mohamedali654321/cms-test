<div class="container ">
    <div style="padding-top: 10px;padding-left: 900px;">
        <a href="/admin/posts" class="btn btn-outline-primary btn-lg" >Go To Posts</a>
    </div>
    
    <h1 class="text-center">Create New Post </h1>
    <div class="row p-4">
        <div class="col-md-10 offset-md-1">
            <form action="create" method="post" autocomplete="off" enctype="multipart/form-data">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" placeholder="Enter Title" class="form-control">
            </div>
            <div class="form-group">
                <label for="status">Status</label>
                <select name="status" id="status" class="form-control">
                    <option value="public">Public</option>
                    <option value="private">Private</option>
                    <option value="draft">Draft</option>

                </select>
            </div>
            <div class="form-group">
                <label for="category">Category</label>
                <select name="category" id="category" class="form-control">
                    {{#each categories}}
                        <option value="{{_id}}">{{title}}</option>
                    {{/each}}
                    
                    

                </select>
            </div>
            <div class="form-check ml-3">
                <label for="allowComments">
                    <input type="checkbox" name="allowComments" id="allowcomments" class="form-check-input">
                    Allow Comments
                </label>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea name="description" id="description" class="form-control" rows="10" placeholder="Enter Your Contact"></textarea>

            </div>
            <div class="form-group">
                <label for="file">Image Upload</label>
                <input type="file"  name="image" id="image" placeholder="Upload File" class="form-control">
            </div>

            <button type="submit" class="btn btn-outline-success btn-lg">Create New Post</button>
            
            
            
            
            
            
            
            </form>
      
            











        </div>





    </div>





</div>