<div class="container">
    
    <div class="row">

        <!-- Post Content Column -->
        <div class="col-lg-8">

            <!-- Title -->
            <h1 class="mt-4">{{posts.title}}</h1>

            <!-- Author -->
            <p class="lead">
                by
                <a href="#">Admin</a>
            </p>

            <hr>

            <!-- Date/Time -->
            <p>Posted on {{posts.creationDate}}</p>

            <hr>
               <p class="lead">{{posts.description}}</p>
            <hr>

            <!-- Preview Image -->
            <img class="img-fluid rounded" src="" alt="">
            

            <hr>

            <!-- Post Content -->
         


            <hr>
            

            <!-- Comments Form -->
            <div class="card my-4">
                
                <h5 class="card-header">Leave a Comment:</h5>
                <div class="card-body">
                    <form action="/comment/{{posts._id}}" method="post">
                        <div class="form-group">
                            <textarea class="form-control" rows="3"  name="comment_body" placeholder="Leave a Comment"></textarea>
                            <input type="hidden" name="id " value="{{posts._id}}">
                        </div>
                        <button type="submit" class="btn btn-primary">Comment <i class="fa fa-comment"></i></button>
                    </form>
                </div>
            </div>






    

            <!-- Single Comment -->
            

            
                
            
                


           
            
                    <div class="media mb-4">
                        <img class="d-flex mr-3 rounded-circle" src="/images/Step-Inside-Online-Store.jpg" alt=""style="max-width: 40px;">
                        <div class="media-body">
                            <h5 class="mt-0"> {{posts.comment.user.fristName}} {{posts.comment.user.lastName}}</h5>
                           {{posts.comment.body}}
                        </div>
                    </div>
                               
                
                
              

           




        </div>
                
                

            

        <!-- Sidebar Widgets Column -->
        <div class="col-md-4">

            <!-- Search Widget -->
            <div class="card my-4">
                <h5 class="card-header">Search</h5>
                <div class="card-body">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                  <button class="btn btn-primary" type="button">Go!</button>
                </span>
                    </div>
                </div>
            </div>

            <!-- Categories Widget -->
            <div class="card my-4">
                <h5 class="card-header">Categories</h5>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <ul class="list-unstyled mb-0">
                               {{#each categories}}
                    
                 
                  <li>
                    <a href="#">{{this.title}}</a>
                  </li>
                   {{/each}}
                                
                            </ul>
                        </div>
                       
                    </div>
                </div>
            </div>

            <!-- Side Widget -->
            <div class="card my-4">
                <h5 class="card-header">Side Widget</h5>
                <div class="card-body">
                    You can put anything you want inside of these side widgets. They are easy to use, and feature the new!
                </div>
            </div>

        </div>

    </div>
    <!-- /.row -->
</div>